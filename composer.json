{
    "name": "skylerkatz/bible-abbreviation-expander",
    "description": "Convert a book of the bible from it's abbreviation to the book full name",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Skyler Katz",
            "email": "skyler@monkdevelopment.com"
        }
    ],
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "SkylerKatz\\BibleAbbreviationExpander\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SkylerKatz\\BibleAbbreviationExpander\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
